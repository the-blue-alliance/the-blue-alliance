{
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "rootDir": ".",
    "noEmit": false
  },
  "include": ["server.ts", "build-server.d.ts"],
  "exclude": ["node_modules", "build", "app"]
}

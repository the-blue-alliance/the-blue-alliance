# FROM ghcr.io/the-blue-alliance/the-blue-alliance/tba-py3-dev:latest
FROM tba

WORKDIR /tba

# Copy only requirements files first (for better layer caching)
COPY requirements.txt .
COPY src/requirements.txt src/

# Install Python dependencies
RUN python -m pip config set global.break-system-packages true && \
    pip install --upgrade setuptools && \
    pip install --ignore-installed -r requirements.txt && \
    pip install --ignore-installed -r src/requirements.txt

# Default to bash shell - services override with specific commands
CMD ["/bin/bash"]
